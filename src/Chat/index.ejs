<!doctype html>
<html>
<head>
	<title>studer + raimann chat</title>
	<style>
		#srchat_iframe {background-color: white;}
		* { margin: 0; padding: 0; box-sizing: border-box; }
		body { font: 13px Helvetica, Arial; }
		form { background: #000; padding: 3px; position: fixed; bottom: 0; width: 100%; }
		form input { border: 0; padding: 10px; width: 90%; margin-right: .5%; }
		form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
		#messages { list-style-type: none; margin: 0; padding: 0; }
		#messages li { padding: 5px 10px; }
		#messages li:nth-child(odd) { background: #eee; }
	</style>
</head>
<script src="/socket.io/socket.io.js"></script>
<script src="https://code.jquery.com/jquery-1.11.1.js"></script>
<script>
	$(function () {
		var socket = io({query: {token: "<%= token %>"}});
		$('form').submit(function(e){
			e.preventDefault(); // prevents page reloading
			if ($('#m').val() !== '') {
				socket.emit('chat_msg', $('#m').val());
				$('#m').val('');
			}
			return false;
		});
		socket.on('chat_msg', function(msg){
			$('#messages').append($('<li>').text('[' + msg.sent_at + '] ' + msg.public_name + ": " + msg.msg));
		});
	});
</script>
<body>
<div id="chat_body">
	<ul id="messages">
		<% messages.forEach(function(message){ %>
		<li>[<%= message.sent_at %>] <%= message.public_name %>: <%= message.message %></li>
		<% }) %>
	</ul>
	<form action="">
		<input id="m" autocomplete="off" /><button>Send</button>
	</form>
</div>
</body>
</html>